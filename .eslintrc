{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "globals": {
    "PLATFORM": "readonly",
    "browser": "readonly",
    "chrome": "readonly"
  },
  "rules": {
    "import/no-extraneous-dependencies": ["off"],
    "prettier/prettier": ["error"],
    "react/prop-types": ["off"]
  }
}
